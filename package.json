{
  "name": "wireframe-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "projects/*"
  ],
  "scripts": {
    "postinstall": "npm run setup",
    "setup": "node packages/wireframe-core/scripts/setup.mjs",
    "init": "npm run init -w @wireframe/core",
    "create": "npm run init",
    "list": "node packages/wireframe-core/scripts/list.mjs",
    "doctor": "node packages/wireframe-core/scripts/doctor.mjs",
    "validate:all": "node packages/wireframe-core/scripts/validate-all.mjs",
    "clean:all": "node packages/wireframe-core/scripts/clean-all.mjs",
    "build": "npm run build -ws",
    "test": "npm run test -ws",
    "wf:setup": "npm run wf:setup -w @wireframe/core",
    "codex:prompts": "npm run wf:setup -w @wireframe/core && npm run codex:prompts -w @wireframe/core",
    "design:tokens": "node packages/wireframe-core/scripts/design-tokens.mjs",
    "dev": "node scripts/run-with-project.mjs dev",
    "build:project": "node scripts/run-with-project.mjs build",
    "build:dev": "node scripts/run-with-project.mjs build:dev",
    "lint": "node scripts/run-with-project.mjs lint",
    "preview": "node scripts/run-with-project.mjs preview",
    "scaffold": "npm run scaffold -w @wireframe/core",
    "transcribe": "npm run transcribe -w @wireframe/core",
    "iterate": "npm run iterate -w @wireframe/core",
    "orchestrate": "node scripts/run-with-project.mjs orchestrate",
    "self-iterate": "node scripts/run-with-project.mjs self-iterate",
    "ux:review": "node scripts/run-with-project.mjs ux:review",
    "mcp:bridge": "node packages/wireframe-core/scripts/mcp/devtools-http-bridge.mjs",
    "validate:metadata": "node scripts/run-with-project.mjs validate:metadata",
    "migrate:metadata": "npm run migrate:metadata -w @wireframe/core",
    "export:business-context": "npm run export:business-context -w @wireframe/core",
    "test:export-business-context": "npm run test:export-business-context -w @wireframe/core",
    "snapshot": "node scripts/run-with-project.mjs snapshot",
    "snapshot:list": "node scripts/run-with-project.mjs snapshot:list",
    "snapshot:restore": "node scripts/run-with-project.mjs snapshot:restore",
    "clean:context-temp": "node packages/wireframe-core/scripts/clean-context-temp.mjs",
    "clean:chrome-cache": "npm run clean:context-temp -- --include-chrome-mcp-cache",
    "clean:mcp-logs": "npm run clean:context-temp -- --include-mcp-log-cache",
    "clean:all-mcp": "npm run clean:context-temp -- --include-agent-outputs --include-chrome-mcp-cache --include-mcp-log-cache",
    "cleanup:selective": "bash packages/wireframe-core/scripts/selective-cleanup.sh",
    "cleanup:selective:execute": "bash packages/wireframe-core/scripts/selective-cleanup.sh --execute",
    "docs:build": "npm run docs:build -w @wireframe/core",
    "docs:check": "npm run docs:check -w @wireframe/core",
    "validate:agent-outputs": "npm run validate:agent-outputs -w @wireframe/core",
    "test:design-tokens": "npm run test:design-tokens -w @wireframe/core",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui"
  }
}
